<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#302C2C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:background="#302C2C"
        android:layout_marginBottom="50dp"
        android:gravity="right|center_vertical"
        android:textColor="@color/number"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/btnlayout"
                android:id="@+id/numplus"
                android:layout_width="90dp"
                android:textSize="20dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClickSpace"
                android:text="+" />

            <Button
                android:background="@drawable/btnlayout"
                android:id="@+id/numminus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:textSize="20dp"
                android:onClick="onClickminus"
                android:text="-" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/nummulty"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClickSpace"
                android:text="*" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/numdivide"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClickSpace"
                android:text="รท" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/num1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:text="1" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/num2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:text="2" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/num3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:text="3" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/Clean"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/clear"
                android:text="C" />
        </LinearLayout>

        <LinearLayout
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/num4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:text="4" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/num5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:text="5" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/num6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClick"
                android:text="6" />

            <Button
                android:textSize="20dp"
                android:background="@drawable/btnlayout"
                android:id="@+id/conver"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:onClick="onClickconver"
                android:text="ABC" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:textSize="20dp"
                        android:background="@drawable/btnlayout"
                        android:id="@+id/num7"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:onClick="onClick"
                        android:text="7" />

                    <Button
                        android:textSize="20dp"
                        android:background="@drawable/btnlayout"
                        android:id="@+id/num8"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:onClick="onClick"
                        android:text="8" />

                    <Button
                        android:textSize="20dp"
                        android:background="@drawable/btnlayout"
                        android:id="@+id/num9"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:onClick="onClick"
                        android:text="9" />


                </LinearLayout>

                <LinearLayout

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:textSize="20dp"
                        android:background="@drawable/btnlayout"
                        android:id="@+id/btndot"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:onClick="onClick"
                        android:text="." />

                    <Button
                        android:textSize="20dp"
                        android:background="@drawable/btnlayout"
                        android:id="@+id/numm0"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:onClick="onClick"
                        android:text="0" />
                    <Button
                        android:textSize="20dp"
                        android:background="@drawable/btnlayout"
                        android:id="@+id/btnps"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:onClick="onClick"
                        android:text="/"/>
                </LinearLayout>
            </LinearLayout>
            <Button

                android:background="@drawable/btnlayout"
                android:gravity="center"
                android:backgroundTint="@color/equal"
                android:layout_margin="2dp"
                android:layout_width="90dp"
                android:layout_height="182dp"
                android:id="@+id/numequal"
                android:text="="
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>